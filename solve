        <div>
            <p class="text">Fórmula:</p>
            <img src="https://aulaprende.com/wp-content/uploads/2019/03/ecuacion-de-segundo-grado-300x150.jpg">
                <p class="text">Introduce a:</p>
                <input required type="number" id="introduceA">
                <p class="text">Introduce b:</p>
                <input required type="number" id="introduceB">
                <p class="text">Introduce c:</p>
                <input required type="number" id="introduceC">
                <br>
                <button id="solve" onclick="Solve()">Solve</button>
            <br>
            <p class="text">Result</p>
            <div id="result" class="text"></div>
            <div id="result2" class="text"></div>
        </div>
        <script>
            function Solve(){
                var a = document.getElementById("introduceA").value;
                var b = document.getElementById("introduceB").value;
                var c = document.getElementById("introduceC").value;

                a = parseFloat(a);
                b = parseFloat(b);
                c = parseFloat(c);

                var sol = document.getElementById("result");
                var sol2 = document.getElementById("result2");

                var xValue = b*b;
                xValue = xValue - 4*a*c;
                console.log(xValue);
                if(xValue < 0){
                    sol.innerHTML = "Solo tiene solución Imaginaria"
                }
                else{
                    xValue = Math.sqrt(xValue);

                    xValue1 = -b+xValue;
                    xValue2 = -b-xValue;

                    xValue1 = xValue1/(2*a);
                    xValue2 = xValue2/(2*a);


                    sol.innerHTML= "Solution 1: "+"<span class='x'>"+xValue1+"</span>";
                    sol2.innerHTML = "Solution 2: "+"<span class='x'>"+xValue2+"</span>";
                }

            };
        </script>
